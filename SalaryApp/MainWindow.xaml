<Window x:Class="SalaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryApp"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Background="#CDC5C2" >
        <Border 
            MinWidth="300" 
            Margin="15" 
            Background="White" 
            VerticalAlignment="Center" 
            Padding="30" 
            MaxWidth="350" 
            CornerRadius="20"
        >
            <StackPanel >
                <Grid>
                    <Label Content="LOGIN" Margin="0,5,5,5" Padding="0,5,0,0" />
                </Grid>
                <Grid>
                    <TextBox Name="login" TextWrapping="Wrap" Padding="3"/>
                </Grid>
                <Grid>
                    <Label Content="PASSWORD" Margin="0,5,5,5" Padding="0,5,0,0" />
                </Grid>
                <Grid>
                    <PasswordBox Name="password" Padding="3"/>
                </Grid>
                <Grid>
                    <Button 
                        Background="#CDC5C2" 
                        Width="80" 
                        HorizontalAlignment="Right"  
                        Content="SIGN UP" 
                        Click="Button_Click" 
                        Margin="0,20,0,0" 
                        Padding="5"
                    />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
