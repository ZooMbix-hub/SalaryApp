<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryApp.Windows.Map"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013" x:Class="SalaryApp.Windows.Map.TestMap"
        mc:Ignorable="d"
        Title="TestMap" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        
        <esri:MapView x:Name="MainMapView"
                      Map="{Binding Map}"
                      GraphicsOverlays="{Binding GraphicsOverlays}"/>

        <StackPanel Grid.Column="1">
            <ComboBox x:Name="SelectMode" Background="Wheat">
                <ComboBoxItem>Select</ComboBoxItem>
                <ComboBoxItem>Edit</ComboBoxItem>
                <ComboBoxItem>Delete</ComboBoxItem>
            </ComboBox>
            <TextBlock x:Name="nameblock" Visibility="Collapsed" Background="Wheat" Text="{Binding Parent.name}">
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
